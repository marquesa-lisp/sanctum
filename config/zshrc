# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Theme - Powerlevel10k
# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh
ZSH_THEME="powerlevel10k/powerlevel10k"

# Plugins
# Standard plugins: $ZSH/plugins/
# Custom plugins: $ZSH_CUSTOM/plugins/
plugins=(git zsh-syntax-highlighting zsh-autosuggestions)

# Exports
export EDITOR=nvim
export TERM="xterm-256color"
export GPG_TTY=$(tty)

# History
setopt BANG_HIST                 # Treat the '!' character specially during expansion.
setopt EXTENDED_HISTORY          # Write the history file in the ":start:elapsed;command" format.
setopt INC_APPEND_HISTORY        # Write to the history file immediately, not when the shell exits.
setopt SHARE_HISTORY             # Share history between all sessions.
setopt HIST_EXPIRE_DUPS_FIRST    # Expire duplicate entries first when trimming history.
setopt HIST_IGNORE_DUPS          # Don't record an entry that was just recorded again.
setopt HIST_IGNORE_ALL_DUPS      # Delete old recorded entry if new entry is a duplicate.
setopt HIST_FIND_NO_DUPS         # Do not display a line previously found.
setopt HIST_IGNORE_SPACE         # Don't record an entry starting with a space.
setopt HIST_SAVE_NO_DUPS         # Don't write duplicate entries in the history file.
setopt HIST_REDUCE_BLANKS        # Remove superfluous blanks before recording entry.
setopt HIST_VERIFY               # Don't execute immediately upon history expansion.
setopt HIST_BEEP                 # Beep when accessing nonexistent history.

HISTSIZE=10000000                # history size
SAVEHIST=10000000                # history save size
DISABLE_AUTO_TITLE="true"        # avoid window rename
KEYTIMEOUT=1                     # remove delay

# Zsh init
source $ZSH/oh-my-zsh.sh

# PATH adds
PATH="$HOME/.local/bin:/usr/local/bin":$PATH
PATH="$HOME/.cargo/bin:$HOME/.cargo/bin/racer":$PATH

# Brew (macOS)
export PATH="/opt/homebrew/bin:$PATH"

# Aliases - General
alias vim="nvim"
alias n="nvim"
alias ls='colorls'

# Aliases - Git
alias ga='git add'
alias gc='git commit'
alias gl='git prettylog'
alias gs='git status'
alias gt='git tag'
alias gp='git push'
alias gpl='git pull'
alias gco='git checkout'
alias gcp='git cherry-pick'
alias gdiff='git diff'

# Aliases - Clojure
alias clj='rlwrap clojure'
alias lt='lein test'
alias ct='clj -A:test'
alias cljn='clojure -Tnew app :name'

# Aliases - Tools
alias lg='lazygit'
alias start-transactor-dev='~/datomic/datomic-pro-1.0.7187/bin/transactor ~/datomic/datomic-pro-1.0.7187/config/dev-transactor-template.properties'

# Java Home (macOS)
export JAVA_11_HOME=$(/usr/libexec/java_home -v11 2>/dev/null)
export JAVA_17_HOME=$(/usr/libexec/java_home -v17 2>/dev/null)
export JAVA_21_HOME=$(/usr/libexec/java_home -v21 2>/dev/null)
export JAVA_23_HOME=$(/usr/libexec/java_home -v23 2>/dev/null)
export JAVA_24_HOME=$(/usr/libexec/java_home -v24 2>/dev/null) # graalvm 24

alias java11='export JAVA_HOME=$JAVA_11_HOME'
alias java17='export JAVA_HOME=$JAVA_17_HOME'
alias java21='export JAVA_HOME=$JAVA_21_HOME'
alias java23='export JAVA_HOME=$JAVA_23_HOME'
alias java24='export JAVA_HOME=$JAVA_24_HOME'
alias graalvm24='export JAVA_HOME=$JAVA_24_HOME'

# Default Java (LTS)
export JAVA_HOME=$JAVA_21_HOME

# jdklink function to create a symlink for OpenJDK (if not automatically linked)
jdklink() {
  if [ -z "$1" ]; then
    echo "Usage: jdklink <version>"
    return 1
  fi
  sudo ln -sfn /opt/homebrew/opt/openjdk/libexec/openjdk.jdk /Library/Java/JavaVirtualMachines/openjdk-"$1".jdk
}

# Syntax highlighting (Homebrew)
source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh 2>/dev/null

# Powerlevel10k theme (Homebrew)
source /opt/homebrew/share/powerlevel10k/powerlevel10k.zsh-theme 2>/dev/null

# Load p10k configuration
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Work specific configs (git ignored)
[ -f ~/.workrc ] && source ~/.workrc

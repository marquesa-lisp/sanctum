# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Theme - Powerlevel10k
# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh
ZSH_THEME="powerlevel10k/powerlevel10k"

# Plugins
# Standard plugins: $ZSH/plugins/
# Custom plugins: $ZSH_CUSTOM/plugins/
plugins=(git zsh-syntax-highlighting zsh-autosuggestions)

# Exports
export EDITOR=nvim
export TERM="xterm-256color"
export GPG_TTY=$(tty)

# History
setopt BANG_HIST                 # Treat the '!' character specially during expansion.
setopt EXTENDED_HISTORY          # Write the history file in the ":start:elapsed;command" format.
setopt INC_APPEND_HISTORY        # Write to the history file immediately, not when the shell exits.
setopt SHARE_HISTORY             # Share history between all sessions.
setopt HIST_EXPIRE_DUPS_FIRST    # Expire duplicate entries first when trimming history.
setopt HIST_IGNORE_DUPS          # Don't record an entry that was just recorded again.
setopt HIST_IGNORE_ALL_DUPS      # Delete old recorded entry if new entry is a duplicate.
setopt HIST_FIND_NO_DUPS         # Do not display a line previously found.
setopt HIST_IGNORE_SPACE         # Don't record an entry starting with a space.
setopt HIST_SAVE_NO_DUPS         # Don't write duplicate entries in the history file.
setopt HIST_REDUCE_BLANKS        # Remove superfluous blanks before recording entry.
setopt HIST_VERIFY               # Don't execute immediately upon history expansion.
setopt HIST_BEEP                 # Beep when accessing nonexistent history.

HISTSIZE=10000000                # history size
SAVEHIST=10000000                # history save size
DISABLE_AUTO_TITLE="true"        # avoid window rename
KEYTIMEOUT=1                     # remove delay

# Zsh init
source $ZSH/oh-my-zsh.sh

# PATH adds
PATH="$HOME/.local/bin:/usr/local/bin":$PATH
PATH="$HOME/.cargo/bin:$HOME/.cargo/bin/racer":$PATH

# Aliases - General
alias vim="nvim"
alias n="nvim"

# colorls (se instalado)
if command -v colorls &> /dev/null; then
    alias ls='colorls'
else
    alias ls='ls --color=auto'
fi

# Aliases - Git
alias ga='git add'
alias gc='git commit'
alias gl='git prettylog'
alias gs='git status'
alias gt='git tag'
alias gp='git push'
alias gpl='git pull'
alias gco='git checkout'
alias gcp='git cherry-pick'
alias gdiff='git diff'

# Aliases - Clojure
alias clj='rlwrap clojure'
alias lt='lein test'
alias ct='clj -A:test'
alias cljn='clojure -Tnew app :name'

# Aliases - Tools
alias lg='lazygit'

# Java Home (Linux - usando update-alternatives ou paths diretos)
export JAVA_11_HOME="/usr/lib/jvm/java-11-openjdk-amd64"
export JAVA_17_HOME="/usr/lib/jvm/java-17-openjdk-amd64"
export JAVA_21_HOME="/usr/lib/jvm/java-21-openjdk-amd64"

alias java11='export JAVA_HOME=$JAVA_11_HOME && sudo update-alternatives --set java $JAVA_11_HOME/bin/java 2>/dev/null'
alias java17='export JAVA_HOME=$JAVA_17_HOME && sudo update-alternatives --set java $JAVA_17_HOME/bin/java 2>/dev/null'
alias java21='export JAVA_HOME=$JAVA_21_HOME && sudo update-alternatives --set java $JAVA_21_HOME/bin/java 2>/dev/null'

# Default Java (usar a versão mais recente disponível)
if [[ -d "$JAVA_21_HOME" ]]; then
    export JAVA_HOME=$JAVA_21_HOME
elif [[ -d "$JAVA_17_HOME" ]]; then
    export JAVA_HOME=$JAVA_17_HOME
elif [[ -d "$JAVA_11_HOME" ]]; then
    export JAVA_HOME=$JAVA_11_HOME
fi

# Adicionar JAVA_HOME ao PATH
export PATH="$JAVA_HOME/bin:$PATH"

# Powerlevel10k theme (via oh-my-zsh custom)
[[ -f "${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k/powerlevel10k.zsh-theme" ]] && \
    source "${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k/powerlevel10k.zsh-theme"

# Load p10k configuration
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Work specific configs (git ignored)
[ -f ~/.workrc ] && source ~/.workrc
